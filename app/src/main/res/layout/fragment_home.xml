<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_home_background">

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_home_background"
        android:divider="@null"
        android:dividerHeight="0px"
        android:paddingRight="100dp"
        android:scrollbars="none">

    </ListView>

    <TextView
        android:id="@+id/tv_home_card_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/app_home_circle_big"
        android:gravity="center"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="2.7sp"
        android:text="KB국민노리카드"
        android:textSize="16.7sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_home_card_type"
        android:layout_below="@+id/tv_home_card_tittle"
        android:layout_marginTop="-32dp"
        android:layout_marginRight="26dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/app_home_circle_small"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16.7sp"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="2.7sp"
        android:text="체크" />
    <ImageView
        android:id="@+id/iv_home_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_home_btn_add"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"/>
</RelativeLayout>