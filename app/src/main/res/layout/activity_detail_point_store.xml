<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Detail_Point_StoreActivity">
<LinearLayout
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="51dp">

    <TextView
android:layout_marginTop="12.2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="2.7sp"
        android:text="포인트상점"
        android:textColor="#505050"
        android:textSize="16.7sp"
        android:textStyle="bold" />
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_centerInParent="true"
        android:background="#707070"/>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="#f2f2f0"
        android:layout_width="303.3dp"
        android:layout_height="37.3dp"
        android:orientation="horizontal">
   <ImageView
       android:background="@drawable/app_point_pointstore_category"
       android:layout_width="84.3dp"
       android:layout_height="37.3dp" />
        <EditText
            android:id="@+id/et_detail_pointstore_search"
            android:layout_width="185.3dp"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/app_point_pointstore_ic_search"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="303.3dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:layout_gravity="center"
            android:id="@+id/recycler_detail_point_store"
            android:layout_marginTop="34.3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            />
    </LinearLayout>
</LinearLayout>