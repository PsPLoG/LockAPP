<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rv_product"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

<ImageView
    android:id="@+id/rv_iv_product"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/app_point_pointstore_img_item_1"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/rv_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.3sp"
            android:textColor="#000000"
            android:text="3400"
            />
            <ImageView
                android:layout_marginLeft="1dp"
                android:layout_width="16.7dp"
                android:layout_height="16.7dp"
                android:src="@drawable/app_point_pointstore_ic_point"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
