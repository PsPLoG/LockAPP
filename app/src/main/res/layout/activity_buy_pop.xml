<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/app_point_pointstore_buybox_yellow"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="133.3dp">
        <TextView
android:layout_marginTop="27.3dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2.7sp"
            android:text="구매하시겠습니까?"
            android:textColor="#99000000"
            android:textSize="16.7sp"
            android:textStyle="bold" />
 <ImageView
     android:layout_marginTop="27.7dp"
     android:layout_gravity="center"
     android:layout_width="218.3dp"
     android:layout_height="2dp"
     android:src="@drawable/app_point_pointstore_buybox_line_horizontal"/>
    <!-- Notice -->

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="mOnCancel"
            android:layout_marginTop="9.7dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fedc82"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2.7sp"
            android:text="취소"
            android:textColor="#99000000"
            android:textSize="16.7sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_gravity="top"
            android:layout_width="2dp"
            android:layout_height="33.3dp"
            android:src="@drawable/app_point_pointstore_buybox_line_vertical"/>
        <Button
            android:layout_weight="1"
            android:layout_marginTop="9.7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fedc82"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2.7sp"
            android:onClick="mOnClose"
            android:text="구매"
            android:textColor="#99000000"
            android:textSize="16.7sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>
