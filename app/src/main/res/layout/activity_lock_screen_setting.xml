<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f6f6"
    tools:context=".activity.LockScreenSettingActivity">
    <LinearLayout
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginTop="15.3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:letterSpacing="0.09"
            android:lineSpacingExtra="2.7sp"
            android:text="잠금 화면 설정"
            android:textColor="#505050"
            android:textSize="16.7sp"
            android:textStyle="bold" />
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_centerInParent="true"
            android:background="#707070"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.3dp"
        android:layout_marginTop="16.7dp"
        android:layout_marginBottom="16dp"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="2sp"
        android:text="잠금설정"
        android:textColor="#707070"
        android:textSize="13.3sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_lockscreen_on"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true" />
        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.3dp"
        android:layout_marginTop="16.7dp"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="2sp"
        android:text="카드사용량 위젯"
        android:textColor="#707070"
        android:textSize="13.3sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.7dp"
        android:background="#fdfdfd"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_lockscreen_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/app_settings_lockscreen_1" />

        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_marginTop="16.7dp"
        android:layout_marginLeft="16.3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13.3sp"
        android:textColor="#707070"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="2sp"
        android:text="기타 위젯"
        />
    <RelativeLayout
        android:layout_marginTop="16.7dp"
        android:background="#fdfdfd"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="354dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_lockscreen_background_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/app_settings_lockscreen_3" />

            <ImageView
                android:id="@+id/btn_lockscreen_timewiget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/app_settings_lockscreen_4" />

            <ImageView
                android:id="@+id/btn_lockscreen_memo_wiget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/app_settings_lockscreen_5" />

            <ImageView
                android:id="@+id/btn_lockscreen_picture_wiget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/app_settings_lockscreen_6" />

            <ImageView
                android:id="@+id/btn_lockscreen_calen_wiget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/app_settings_lockscreen_7" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>